@model Fast_Food_online.ViewModels.ProductVM

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<form enctype="multipart/form-data" asp-action="Edit" >

<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId"  class="control-label" hidden ></label>
                <input asp-for="ProductId"   class="form-control"   hidden/>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CatId" class="control-label"></label>
                <select asp-for="CatId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))" class="form-control"></select>
                <span asp-validation-for="CatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
    <div class="col-md-4">
            <div class="form-group">               
                <img id="pic" src="~/Uploads/@Model.ImageURl" alt="pic"  style="width:270px;height:270px;object-fit:cover" class="img-thumbnail"/>               
                <input asp-for="Image" type="file" onchange="document.getElementById('pic').src=window.URL.createObjectURL(this.files[0])" accept="image/*" on class="form-control mt-3" value="@Model.ImageURl" />
                
            </div>
    </div>
</div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


